---
import Layout from "../layouts/Layout.astro";
import BackgroundFirstSection from "../components/BackgroundFirstSection.astro";
import '../../app/globals.css';
import { Image } from 'astro:assets';
import CardTextOnly from "../components/CardTextOnly.astro";
import MainImageTechStackIcons from "../components/MainImageTechStackIcons.astro";


const currentYear = new Date().getFullYear();
const experience = currentYear - 2021;
---
<Layout title="Elvis Miranda Portfolio">
  <main style={{
    height: 'calc(100vh - 72px)',
  }} class="h-full flex flex-col">

    <div class="mt-4 flex flex-col justify-between h-full flex-1 relative">
      <div class="absolute top-1/4 left-2/4 transform -translate-y-2/4 -translate-x-2/4">
        <BackgroundFirstSection  />
      </div>
      <div class="absolute top-2/4 left-2/4">
        <MainImageTechStackIcons  />
      </div>

      <div class="flex justify-between pt-10">
        <h4 class="text-5xl dark:text-slate-800 text-slate-400  font-light transform -translate-x-10">Frontend</h4>
        <h4 class="text-5xl dark:text-slate-800 text-slate-400 font-light translate-x-10">Backend</h4>
      </div>

      <div class="flex justify-center z-10 relative flex-1 items-center">
      <div class="relative imageProfileBox">
        <Image style='height: 400px' alt="Elvis Miranda" class="rounded-full object-cover transparentMainImage" src="/main-picture.JPG" width="400" height="400"/>
        <div class="absolute bottom-0 left-2/4 -translate-x-2/4 -translate-y-4 flex flex-col justify-center">
          <h1 class="text-center text-8xl text-nowrap font-bold dark:text-gray-200 text-slate-800">Elvis Miranda</h1>
          <h2 class="text-center text-4xl dark:text-gray-500 text-slate-400">Fullstack Developer</h2>
        </div>
      </div>
      </div>
      <div class="pb-14 flex items-center justify-between">
        <CardTextOnly>
          <p class="dark:text-gray-500 text-gray-900"><span class="dark:text-teal-500 text-teal-800 font-bold">+{experience} Years</span> of experience</p>
          <p class="dark:text-gray-500 text-gray-900">As a Software Developer</p>
        </CardTextOnly>
        <CardTextOnly>
          <p class="dark:text-gray-500 text-gray-900"><span class="dark:text-teal-500 text-teal-800 font-bold">Experience</span> working in</p>
          <p class="dark:text-gray-500 text-gray-900"><span class="dark:text-teal-500 text-teal-800 font-bold">diversity</span> types of projects </p>
          <p class="dark:text-gray-500 text-gray-900">in <span class="dark:text-teal-500 text-teal-800 font-bold">multicultural</span> teams and companies</p>
        </CardTextOnly>
        <CardTextOnly>
          <p class="dark:text-gray-500 text-gray-900"><span class="dark:text-teal-500 text-teal-800 font-bold">+{experience} Years</span> of experience</p>
          <p class="dark:text-gray-500 text-gray-900">As a Software Developer</p>
        </CardTextOnly>
      </div>
    </div>
  </main>
</Layout>
